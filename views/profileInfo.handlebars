<div class="mb-4">
  <div class="card flex mb-4">
    <div class="card--main w-full">
      <div class="pb-4 mb-4 border-b-2 border-stone-800">
        <h3 class="card--header text-3xl text-amber-200 book-modal cursor-pointer mb-2" book-id="${
          item.id
        }">{{profile.name}}</h3>
        <a href="mailto:{{profile.email}}" class="block card--header text-2xl text-amber-200 mb-2">{{profile.email}}</a>
        <a href="tel:{{profile.phone}}" class="block card--description mb-2">{{profile.phone}}</a>
      </div>
      <div>
        <h4 class="mb-4 text-3xl">Книги в резерве</h4>
        <div>
          {{#each profile.reserve as |reserve|}}
            <div class="pb-2 mb-4 border-b-2 border-stone-800 w-full">
              <p class="mb-2"><span class="text-2xl select-none">Название книги:</span> <a href="/static/books/{{reserve.bookId}}" class="text-xl underline">{{reserve.title}}</a></p>
              <p class="mb-2"><span class="text-xl select-none">Дата резерва:</span> <span>{{reserve.created_at}}</span></p>
              <p class="mb-2"><span class="text-xl select-none">Дата окончания резерва:</span> <span>{{reserve.timeout}}</span></p>
              {{#if reserve.overdue}}
                <p class="text-xl text-orange-600 bg-stone-800 p-2 text-center select-none mb-2">Книга просрочена!!!</p>
              {{/if}}
              {{#unless reserve.canceled}}
                <div>
                  <button id="modal-reset" class="p-2 bg-stone-600 hover:bg-opacity-70 active:scale-95 rounded-md mr-2" book-id="{{reserve.bookId}}">Возврат книги</button>
                </div>
              {{/unless}}
            </div>
          {{/each}}
        </div>
      </div>      
    </div>
  </div>
</div>

<script src="/js/requestResetReserve.js"></script>